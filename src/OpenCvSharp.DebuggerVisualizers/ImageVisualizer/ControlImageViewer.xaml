<UserControl
    x:Class="OpenCvSharp.DebuggerVisualizers.ImageVisualizer.ControlImageViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:OpenCvSharp.DebuggerVisualizers.ImageVisualizer"
    mc:Ignorable="d" 
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance Type=local:MatImageProxy, IsDesignTimeCreatable=false}"
>
    <Grid>
        <local:ZoomBorder ClipToBounds="True" Background="Gray">
            <Image Source="{Binding ImageSource}"/>
        </local:ZoomBorder>
    </Grid>
</UserControl>
